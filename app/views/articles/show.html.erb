<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<h2>Notes</h2>
<%= render @article.notes %>

<h2>Add a note:</h2>
<%= render 'notes/form' %>

<h2>Average note:</h2>
<%= @article.computeMeanNotes %> /20.0

